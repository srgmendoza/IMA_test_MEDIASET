<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ListTitle" parent="Title">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="VideoTitle" parent="Title">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Widget"/>

    <style name="Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_seekbar</item>
        <item name="android:minHeight">@dimen/player_seekbar_max_height</item>
        <item name="android:maxHeight">@dimen/player_seekbar_max_height</item>
        <item name="android:thumb">@drawable/custom_seekbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
